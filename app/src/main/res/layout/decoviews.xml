<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_horizontal_margin">


    <com.hookedonplay.decoviewlib.DecoView xmlns:custom="http://schemas.android.com/apk/res-auto"
                                           android:id="@+id/dynamicArcViews"
                                           android:layout_width="200dp"
                                           android:layout_height="200dp"
                                           android:layout_centerInParent="true"
                                           custom:dv_lineWidth="10dp">

    </com.hookedonplay.decoviewlib.DecoView>

    <ImageView
            android:id="@+id/imageView_userIcon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_captain_24dp"
            android:layout_centerInParent="true"/>

    <TextView
            android:textSize="15dp"
            android:id="@+id/rankOfTeammates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dynamicArcViews"
            android:layout_centerHorizontal="true"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
        android:textSize="15dp"
        android:id="@+id/userID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rankOfTeammates"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
            android:textSize="15dp"
            android:id="@+id/stepsOfGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userID"
            android:layout_centerHorizontal="true"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
</RelativeLayout>