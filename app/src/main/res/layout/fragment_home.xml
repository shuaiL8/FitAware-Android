<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".Home.HomeFragment">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/textDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:layout_weight="4"
                        android:gravity="center"
                        android:textSize="30sp" />

                <ImageButton
                        android:id="@+id/dropDownButton"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@null"
                        android:layout_marginRight="10dp"/>



            </LinearLayout>

            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp">

                <FrameLayout
                        android:id="@+id/calendar_frame"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:minHeight="100dp"
                        android:padding="10dp">

                </FrameLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/textGridView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:layout_weight="4"
                        android:gravity="center"
                        android:textSize="20sp" />

                <ImageButton
                        android:id="@+id/dropDownButtonOfGridView"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@null"
                        android:layout_marginRight="10dp"/>


            </LinearLayout>

            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                <FrameLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                        <com.example.fitaware.Home.ExpandableHeightGridView
                                android:id="@+id/gridViewDecoViews"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:columnWidth="150dp"
                                android:numColumns="3"
                                android:verticalSpacing="10dp"
                                android:stretchMode="spacingWidthUniform"
                                android:padding="5dp"/>


                    </LinearLayout>

                </FrameLayout>





            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                <FrameLayout
                        android:id="@+id/decoView_frame"
                        android:layout_width="match_parent"
                        android:layout_height="450dp"
                        android:minHeight="100dp"
                        android:padding="10dp">

                    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="@dimen/activity_horizontal_margin"
                                    tools:context=".Home.DecoviewFragment">

                        <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_above="@+id/imageActivity2">

                            <TextView
                                    android:id="@+id/textPercentage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/colorCals"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:textSize="40sp"/>

                            <TextView
                                    android:id="@+id/textRemaining"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/textPercentage"
                                    android:layout_centerHorizontal="true"
                                    android:textColor="@color/colorCals"
                                    android:maxWidth="200dp"
                                    android:textSize="10dp"
                                    android:textAppearance="?android:attr/textAppearanceSmall"/>
                            <com.hookedonplay.decoviewlib.DecoView xmlns:custom="http://schemas.android.com/apk/res-auto"
                                                                   android:id="@+id/dynamicArcView"
                                                                   android:layout_width="183dp"
                                                                   android:layout_height="183dp"
                                                                   android:layout_centerInParent="true"
                                                                   custom:dv_lineWidth="22dp">

                            </com.hookedonplay.decoviewlib.DecoView>

                            <com.hookedonplay.decoviewlib.DecoView xmlns:custom="http://schemas.android.com/apk/res-auto"
                                                                   android:id="@+id/dynamicArcView2"
                                                                   android:layout_width="232dp"
                                                                   android:layout_height="232dp"
                                                                   android:layout_centerInParent="true"
                                                                   custom:dv_lineWidth="22dp">

                            </com.hookedonplay.decoviewlib.DecoView>

                            <com.hookedonplay.decoviewlib.DecoView xmlns:custom="http://schemas.android.com/apk/res-auto"
                                                                   android:id="@+id/dynamicArcView3"
                                                                   android:layout_width="280dp"
                                                                   android:layout_height="280dp"
                                                                   android:layout_centerInParent="true"
                                                                   custom:dv_lineWidth="22dp">

                            </com.hookedonplay.decoviewlib.DecoView>

                        </RelativeLayout>

                        <ImageView
                                android:id="@+id/imageActivity1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@+id/imageActivity2"
                                android:background="@drawable/circle_activity_1"
                                android:padding="12dp"
                                android:src="@drawable/ic_add_black_24dp" android:layout_marginTop="-2dp"/>

                        <ImageView
                                android:layout_marginTop="8dp"
                                android:id="@+id/imageActivity2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_above="@+id/rankActivity2"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/circle_activity_2"
                                android:padding="12dp"
                                android:src="@drawable/ic_person_black_24dp" />

                        <ImageView
                                android:id="@+id/imageActivity3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignTop="@+id/imageActivity2"
                                android:background="@drawable/circle_activity_3"
                                android:padding="12dp"
                                android:src="@drawable/ic_group_black_24dp"/>


                        <TextView
                                android:textSize="15dp"
                                android:id="@+id/rankActivity1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@+id/rankActivity2"
                                android:paddingLeft="4dp"
                                android:textAppearance="?android:attr/textAppearanceMedium"/>

                        <TextView
                                android:textSize="15dp"
                                android:id="@+id/rankActivity2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_above="@+id/textActivity2"
                                android:layout_centerHorizontal="true"
                                android:textAppearance="?android:attr/textAppearanceMedium"/>

                        <TextView
                                android:textSize="15dp"
                                android:id="@+id/rankActivity3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignTop="@+id/rankActivity2"
                                android:paddingRight="4dp"
                                android:textAppearance="?android:attr/textAppearanceMedium"/>

                        <TextView
                                android:textSize="15dp"
                                android:id="@+id/textActivity1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@+id/textActivity2"
                                android:paddingLeft="4dp"
                                android:textAppearance="?android:attr/textAppearanceMedium"/>

                        <TextView
                                android:textSize="15dp"
                                android:id="@+id/textActivity2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:textAppearance="?android:attr/textAppearanceMedium"/>

                        <TextView
                                android:textSize="15dp"
                                android:id="@+id/textActivity3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignTop="@+id/textActivity2"
                                android:paddingRight="4dp"
                                android:textAppearance="?android:attr/textAppearanceMedium"/>

                        <!--<Button-->
                                <!--android:id="@+id/demo1"-->
                                <!--android:layout_width="wrap_content"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:layout_alignTop="@+id/demo2"-->
                                <!--android:padding="12dp"-->
                                <!--android:text="today%" />-->

                        <!--<Button-->
                                <!--android:id="@+id/demo2"-->
                                <!--android:layout_width="wrap_content"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:layout_alignParentBottom="true"-->
                                <!--android:layout_centerHorizontal="true"-->
                                <!--android:text="DEMO 2" />-->

                        <!--<Button-->
                                <!--android:id="@+id/clear"-->
                                <!--android:layout_width="wrap_content"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:layout_alignParentEnd="true"-->
                                <!--android:layout_alignParentRight="true"-->
                                <!--android:layout_alignTop="@+id/demo2"-->
                                <!--android:padding="12dp"-->
                                <!--android:text="clear" />-->
                    </RelativeLayout>

                </FrameLayout>
            </android.support.v7.widget.CardView>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_weight="4"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="35dp"
                        android:textColor="@color/colorCals"
                        android:text="Person Steps"/>

                <com.hookedonplay.decoviewlib.DecoView xmlns:custom="http://schemas.android.com/apk/res-auto"
                                                       android:layout_marginRight="10dp"
                                                       android:id="@+id/dynamicArcIcon"
                                                       android:layout_width="60dp"
                                                       android:layout_height="60dp"
                                                       android:layout_weight="1"
                                                       android:layout_gravity="center"
                                                       android:layout_centerInParent="true"
                                                       custom:dv_lineWidth="8dp">

                </com.hookedonplay.decoviewlib.DecoView>


            </LinearLayout>


            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp">

                <com.jjoe64.graphview.GraphView
                        android:id="@+id/personalStepsGraph"
                        android:layout_width="match_parent"
                        android:layout_height="200dip" />
            </android.support.v7.widget.CardView>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
            <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_weight="4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="35dp"
                    android:textColor="@color/colorTime"
                    android:text="Group Steps"/>

            <com.hookedonplay.decoviewlib.DecoView xmlns:custom="http://schemas.android.com/apk/res-auto"
                                                   android:layout_marginRight="10dp"
                                                   android:id="@+id/dynamicArcIcon2"
                                                   android:layout_width="60dp"
                                                   android:layout_height="60dp"
                                                   android:layout_weight="1"
                                                   android:layout_gravity="center"
                                                   android:layout_centerInParent="true"
                                                   custom:dv_lineWidth="8dp">

            </com.hookedonplay.decoviewlib.DecoView>
        </LinearLayout>

            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp">

                <com.jjoe64.graphview.GraphView
                        android:id="@+id/groupStepsGraph"
                        android:layout_width="match_parent"
                        android:layout_height="200dip" />
            </android.support.v7.widget.CardView>

        </LinearLayout>>


    </ScrollView>



</FrameLayout>